<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="doris_tryon-script" type="host">https://widget-staging.doris.services/doris-tryon.js</value>
                <value id="doris_widget-script" type="host">https://widget-staging.doris.services/doris-widget.js</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="doris_widget-connect" type="host">https://widget-staging.doris.services/doris-widget.js</value>
                <value id="doris_tryon-connect" type="host">https://widget-staging.doris.services/doris-tryon.js</value>
                <value id="doris_graphql-connect" type="host">https://widget-staging.hasura.app/v1/graphql</value>
                <value id="doris_amplitude-connect" type="host">https://api.amplitude.com/</value>
                <value id="doris_sentry-connect" type="host">https://*.ingest.sentry.io/</value>
                <value id="doris_graphqlwss-connect" type="host">wss://widget-staging.hasura.app/v1/graphql</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="doris_imgix_avatar-img" type="host">https://doris-avatar-test.imgix.net/</value>
                <value id="doris_imgix_media-img" type="host">https://doris-media-test.imgix.net/</value>
                <value id="doris_s3_media-img" type="host">https://doris-media-production.s3.sa-east-1.amazonaws.com/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
